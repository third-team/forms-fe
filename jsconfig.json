{
	"compilerOptions": {
		"target": "esnext",
		"module": "es6",
		"baseUrl": "./src",
		"paths": {
			"api": ["./src/api/*"],
			"assets": ["./src/assets/*"],
			"components": ["./src/components/*"],
			"core": ["./src/core/*"],
			"hooks": ["./src/hooks/*"],
			"modules": ["./src/modules/*"],
			"pages": ["./src/pages/*"],
			"redux": ["./src/redux/*"],
			"styles": ["./src/styles/*"],
			"utils": ["./src/utils/*"]
		},
		"jsx": "react"
	},
	"exclude": ["node_modules", "trash"]
}
